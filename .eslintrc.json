{
  "extends": "airbnb-base",
  "rules": {
    "operator-linebreak": ["error", "after", { "overrides": { "?": "before", ":": "before" } }],
    "import/extensions": "off",
    "key-spacing": "off",
    "max-len": ["error", 140],
    "func-names": "off",
    "no-console": "off"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "plugins": [],
  "settings": {}
}
